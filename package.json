{
  "name": "harbormaster",
  "displayName": "Harbormaster",
  "icon": "resources/harbormaster.png",
  "description": "Project-aware window titles with a lightweight project tracker and quick actions.",
  "version": "1.2.25-alpha",
  "publisher": "harbormaster",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tiparium/VSCE_Harbormaster.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "harbormaster",
          "title": "Harbormaster",
          "icon": "resources/harbormaster.png"
        }
      ]
    },
    "views": {
      "harbormaster": [
        {
          "id": "harbormasterActions",
          "name": "Harbormaster",
          "contextualTitle": "Harbormaster",
          "icon": "resources/harbormaster.png"
        }
      ]
    },
    "commands": [
      {
        "command": "projectWindowTitle.createConfig",
        "title": "Harbormaster: Create project config",
        "category": "Harbormaster"
      },
      {
        "command": "projectWindowTitle.openConfig",
        "title": "Harbormaster: Open project config",
        "category": "Harbormaster"
      },
      {
        "command": "projectWindowTitle.showMenu",
        "title": "Harbormaster: Menu",
        "category": "Harbormaster"
      },
      {
        "command": "projectWindowTitle.refresh",
        "title": "Harbormaster: Refresh window title",
        "category": "Harbormaster"
      },
      {
        "command": "projectWindowTitle.addGlobalTag",
        "title": "Harbormaster: Add global tag",
        "category": "Harbormaster"
      },
      {
        "command": "projectWindowTitle.removeGlobalTag",
        "title": "Harbormaster: Remove global tag",
        "category": "Harbormaster"
      },
      {
        "command": "projectWindowTitle.assignTag",
        "title": "Harbormaster: Assign tag to project",
        "category": "Harbormaster"
      },
      {
        "command": "projectWindowTitle.removeProjectTag",
        "title": "Harbormaster: Remove tag from project",
        "category": "Harbormaster"
      },
      {
        "command": "projectWindowTitle.addProjectToCatalog",
        "title": "Harbormaster: Add current project to catalog",
        "category": "Harbormaster"
      },
      {
        "command": "projectWindowTitle.openProjectFromCatalog",
        "title": "Harbormaster: Open project from catalog",
        "category": "Harbormaster"
      }
    ],
    "configuration": {
      "title": "Project Window Title",
      "properties": {
        "projectWindowTitle.configFile": {
          "type": "string",
          "default": ".harbormaster/project.json",
          "description": "Relative path to the project config file containing project metadata."
        },
        "projectWindowTitle.tagsFile": {
          "type": "string",
          "default": ".harbormaster/tags.json",
          "description": "Relative path to the tag registry file."
        },
        "projectWindowTitle.projectsFile": {
          "type": "string",
          "default": "projects.json",
          "description": "File name/path for the Harbormaster project catalog (relative to the extension's global storage)."
        },
        "projectWindowTitle.projectNameKey": {
          "type": "string",
          "default": "project_name",
          "description": "JSON key to read from the config file."
        },
        "projectWindowTitle.headlessPrefix": {
          "type": "string",
          "default": "[Headless] ",
          "description": "Prefix used when no project name is found."
        },
        "projectWindowTitle.namedFormat": {
          "type": "string",
          "default": "${projectName}",
          "description": "Template used when a project name is present."
        },
        "projectWindowTitle.showVersion": {
          "type": "boolean",
          "default": false,
          "description": "When true, appends the project version if available."
        },
        "projectWindowTitle.projectVersionKey": {
          "type": "string",
          "default": "project_version",
          "description": "JSON key containing the project version."
        },
        "projectWindowTitle.projectVersionMajorKey": {
          "type": "string",
          "default": "version_major",
          "description": "JSON key containing the major component for derived versions."
        },
        "projectWindowTitle.projectVersionMinorKey": {
          "type": "string",
          "default": "version_minor",
          "description": "JSON key containing the minor component for derived versions."
        },
        "projectWindowTitle.projectVersionPrereleaseKey": {
          "type": "string",
          "default": "version_prerelease",
          "description": "JSON key containing the prerelease label for derived versions (optional)."
        },
        "projectWindowTitle.versionFormat": {
          "type": "string",
          "default": "${projectName} (${projectVersion})",
          "description": "Template used when showVersion is true and a version is available."
        }
      }
    }
  },
  "scripts": {
    "postinstall": "patch-package",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "lint": "echo \"No lint configured\"",
    "test": "echo \"No tests yet\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "patch-package": "^6.5.1",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "punycode": "^2.3.1",
    "vsce": "^2.15.0"
  }
}
